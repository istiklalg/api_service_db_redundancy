# this file will be placed in /etc/systemd/system/atibaApiService.service
# don't forget to make IN_PRODUCTION = true in configuration.js file ...

[Unit]
Description=ATIBA API SERVICE

[Service]
ExecStart=server.js
Restart=always
User=root
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=api

[Install]
WantedBy=multi-user.target